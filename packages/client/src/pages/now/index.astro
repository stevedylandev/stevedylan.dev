---
import PageLayout from "@/layouts/Base";
import NowUpdates from "@/components/now/NowUpdates";
import { SOCIAL_LINKS } from "@/data/constants";

const meta = {
	title: "Now",
	description: "What I'm up to recently",
};
---
<PageLayout meta={meta}>
  <div class="space-y-6">
    <h1 class="title">Now</h1>
    <p>What I'm up to recently</p>
    <ul class="list-disc pl-4 space-y-4">
      <li>Working as Senior Solutions Engineer at Stablecore</li>
      <li>Focusing on building out my personal site</li>
      <li>Tinkering with ATProto publishing with <a class="style-link" target="_blank" rel="noreferrer" href="https://sequoia.pub">Sequoia</a></li>
      <li>Amateur astronomy when the sky is clear</li>
      <li>Collecting and listening to cassette tapes and vinyls</li>
      <li>Testing out different fountain pen inks</li>
      <li>Reading Wendell Berry + Lion Witch and the Wardrobe with my kids</li>
    </ul>
    <p class="text-gray-400">Last updated: February 4th, 2026</p>
  <div class="flex flex-row justify-between items-center w-full pt-12 pb-6">
    <h2 class="title">Updates</h2>
    <div class="flex gap-2 items-center">
    <a
				class="inline-block p-2 sm:hover:text-link"
				href="/now/rss.xml"
				target="_blank"
				rel="noopener noreferrer"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-6 w-6"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
				<g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M4 11a9 9 0 0 1 9 9M4 4a16 16 0 0 1 16 16"/><circle cx="5" cy="19" r="1"/></g>
				</svg>
				<span class="sr-only">RSS</span>
  			</a>
        <a
          class="flex items-center gap-4 p-2 sm:hover:text-link"
          href={SOCIAL_LINKS.atproto}
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
  				class="h-6 w-6" stroke-width="1.5" stroke="currentColor"
  				 viewBox="0 0 24 24"  xmlns="http://www.w3.org/2000/svg">
            <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
              <circle cx="12" cy="12" r="4"/>
              <path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-4 8"/>
            </g>
            </svg>
          </svg>
          <span class="sr-only">ATProto</span>
        </a>
    </div>
  </div>
  <NowUpdates client:load />
  </div>
</PageLayout>
